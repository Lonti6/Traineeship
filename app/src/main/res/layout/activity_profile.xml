<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <com.mxn.soul.flowingdrawer_core.FlowingDrawer
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:edPosition="1"
        app:edMenuSize="260dp"
        app:edMenuBackground="@color/main_green">
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_profile"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/name_user"
            style="@style/AdvertHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:text="Дмитрий Башкирцев"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="290dp"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <org.apmem.tools.layouts.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/user_tags_field">
            <RelativeLayout
                    android:id="@+id/tag_item"
                    style="@style/TagsContainer"
                    android:background="@drawable/tag">
                <TextView
                        style="@style/AdvertTagText"
                        android:text="Senior"/>
            </RelativeLayout>
        </org.apmem.tools.layouts.FlowLayout>
    </ScrollView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="430dp"
        android:layout_marginBottom="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="top"
        android:gravity="top"
        android:background="@drawable/advert_border_color"/>
    </RelativeLayout>
        <!--Конец контента сраницы-->
        <!--Содержимое панели начало-->
        <com.mxn.soul.flowingdrawer_core.FlowingMenuLayout
            android:id="@+id/menulayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_green">
            <include layout="@layout/left_panel"/>
        </com.mxn.soul.flowingdrawer_core.FlowingMenuLayout>
        <!--Содержимое панели конец-->
    </com.mxn.soul.flowingdrawer_core.FlowingDrawer>
</androidx.constraintlayout.widget.ConstraintLayout>