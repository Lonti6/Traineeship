<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/bg">

    <ImageView
            android:layout_width="40pt"
            android:layout_height="40pt" app:srcCompat="@drawable/ic_advert" android:id="@+id/icon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:text="Жильцов Никита"
            android:layout_width="239dp"
            android:layout_height="30dp"
            android:id="@+id/name"
            style="@style/HeaderMessageText"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintEnd_toStartOf="@+id/time"
            android:layout_marginEnd="3dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="20:20"
            style="@style/TimeMessageText"
            android:layout_width="40dp"
            android:layout_height="25dp" android:id="@+id/time"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="21dp" android:layout_marginEnd="5dp"/>
    <TextView
            android:text="TextView"
            style="@style/TimeMessageText"
            android:layout_width="226dp"
            android:layout_height="24dp" android:id="@+id/message"
            app:layout_constraintStart_toEndOf="@+id/icon"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintEnd_toStartOf="@+id/time" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="20dp"/>
    <View
            android:layout_width="wrap_content"
            android:layout_height="1px" android:id="@+id/line"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/line_grey"/>
</androidx.constraintlayout.widget.ConstraintLayout>