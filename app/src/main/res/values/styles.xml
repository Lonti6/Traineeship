<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextFieldStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="ButtonStyle">
        <item name="backgroundTint">@color/main_green</item>
        <item name="roundPercent">5</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
    
    <style name="HeadingText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="GrayText">
        <item name="android:textColor">#b0b0b0</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="GreenText">
        <item name="android:textColor">@color/main_green</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/open_sans</item>

    </style>

    <style name="BigWhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallWhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="AdvertHeadingText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="StandartText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
    <style name="HeaderMessageText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TimeMessageText">
        <item name="android:textColor">@color/grayTime</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdvertDescriptionText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10pt</item>
        <item name="android:layout_marginRight">10pt</item>
        <item name="android:layout_marginTop">5pt</item>
        <item name="android:layout_marginBottom">5pt</item>
    </style>

    <style name="AdvertTagText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10pt</item>
        <item name="android:layout_marginRight">10pt</item>
        <item name="android:layout_marginBottom">5pt</item>
        <item name="android:layout_marginTop">5pt</item>
        <item name="minHeight">10pt</item>
    </style>

    <style name="TagsContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5pt</item>
        <item name="android:layout_marginBottom">5pt</item>
    </style>
</resources>